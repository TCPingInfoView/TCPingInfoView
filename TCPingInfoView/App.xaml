<Application
	x:Class="TCPingInfoView.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:system="clr-namespace:System;assembly=System.Runtime"
	Startup="Application_Startup">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Views/ChromelessWindowDictionary.xaml" />
				<ResourceDictionary Source="Views/DataGridrDictionary.xaml" />
			</ResourceDictionary.MergedDictionaries>
			<Thickness x:Key="ButtonBorderThickness">0</Thickness>
			<Thickness x:Key="ButtonPadding">5</Thickness>
			<Thickness x:Key="ButtonMargin">0,0,5,0</Thickness>
			<SolidColorBrush x:Key="MetroThemeBrush" Color="#C01E90FF" />
			<SolidColorBrush x:Key="ToolButtonBrush" Color="Black" />
			<system:Double x:Key="MenuItemFontSize">14</system:Double>
		</ResourceDictionary>
	</Application.Resources>
</Application>